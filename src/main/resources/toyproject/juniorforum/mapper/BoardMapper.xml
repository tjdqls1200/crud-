<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="toyproject.juniorforum.mapper.BoardMapper">
    <resultMap id="boardMap" type="BoardVO">
        <result column="board_id" property="boardId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="getList" resultType="BoardVO" resultMap="boardMap">
        <![CDATA[SELECT * FROM tbl_board WHERE board_id > 0]]>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="boardId" parameterType="BoardDTO">
        INSERT INTO tbl_board(title, content, writer, update_time)
        VALUES (#{title}, #{writer}, #{content}, now())
    </insert>

    <select id="read" resultType="BoardVO">
        SELECT * FROM tbl_board WHERE board_id = #{boardId}
    </select>

    <update id="update" parameterType="BoardDTO">
        UPDATE tbl_board
        SET title = #{title},
            content = #{content},
            update_time = now()
        WHERE board_id = #{boardId}
    </update>
</mapper>